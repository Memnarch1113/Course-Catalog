<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name%></td>
        <td><%= link_to 'Show', course %><%= link_to 'Edit', edit_course_path(course) %><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <% course.subjects.each do |subject| %>
          <%= subject.name %>
          <% end %>
        </td>
        <td>
          <%= form_tag(controller: "courses", action: "enrole") do %>
          <%=hidden_field_tag(:course_id, course.id)%>
          <%= submit_tag("Enrole")%>
        </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

