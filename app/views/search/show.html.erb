<div class="main-container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Search</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">

      <%= form_tag("/search/results", remote: true, method: "get", :html=>{:id=>'lead_form'}) do %>
        <%= label_tag(:subject, "Subject:") %>
        <%= select(:subject, :subject_id, options_from_collection_for_select(Subject.all, :subject_id, :name), {:include_blank => 'NONE'}, :onchange => '$("#button-submit").click();') %>
        <%= label_tag(:course_name, "Course Name:") %>
        <%= text_field_tag :course_name, params["Course Name"], onkeyup: '$("#button-submit").click();' %>
        <%= submit_tag"Search", :id =>"button-submit" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12"id="results">
    </div>
  </div>
</div>
